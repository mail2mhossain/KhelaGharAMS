
<!DOCTYPE html>
<html lang="en">
    <head runat="server">
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@(Url.Content("~/favicon.ico"))" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @(Styles.Render("~/Content/css"))
        @(Scripts.Render("~/bundles/modernizr"))
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">Naked Objects MVC - Razor</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @(Html.Partial("_LoginPartial"))
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@(Html.ActionLink("Home", "Index", "System"))</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("FeaturedContent", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderSection("MainContent", required: false)
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @(DateTime.Now.Year) - Naked Objects Group Ltd</p>
                </div>
            </div>
        </footer>

        @(Scripts.Render("~/bundles/jquery"))
        @RenderSection("ScriptsSection", required: false)
    </body>
</html>